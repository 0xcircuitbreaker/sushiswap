{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build", "generate"],
      "env": [
        "ALCHEMY_ID", 
        "STRAPI_API_URL", 
        "STRAPI_PREVIEW_SECRET",
        "TOKENS_API_V0_BASE_URL",
        "NEXT_TELEMETRY_DISABLED"
      ],
      "cache": true
    },
    "test": {
      "outputs": [],
      "dependsOn": ["build"],
      "env": [
        "CHAIN_ID",
        "ANVIL_FORK_URL",
        "ANVIL_BLOCK_NUMBER",
        "ANVIL_PORT",
        "ALCHEMY_ID",
        "DRPC_ID",
        "TEST"
      ]
    },
    "check": {
      "dependsOn": ["^build", "generate"],
      "cache": false
    },
    "sitemap": {
      "outputs": ["public/sitemap.xml", "public/sitemap-*.xml", "public/robots.txt"],
      "dependsOn": ["build"],
      "cache": true
    }
  }
}
